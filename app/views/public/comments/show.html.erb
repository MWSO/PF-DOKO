<div class= "row">
  <h3><%= @post.title %>へのコメント一覧</h3>
</div>

<div class= "row">
  <!--投稿履歴一覧-->
  <%= render "public/comments/comment", comments: @comments %>
</div>
<div class= "d-flex justify-content-center">
  <%= paginate @comments %>
</div>

<div class= "row">
  <%= render "public/comments/form", post_image: @post, comment: @comment_new %>
</div>

<div class= "row">
  <%= link_to post_path(@post) do %>
    <p>写真の画面に戻る</p>
  <% end %>
</div>