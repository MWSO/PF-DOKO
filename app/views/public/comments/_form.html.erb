<%= form_with model: [post_image, comment] do |f| %>
  <div class= "form-group row">
    <%= f.label :comment, "コメント入力欄", class: "col-3" %>
    <%= f.text_area :comment, row: "5", placeholder: "コメント", size: "80x3", class: "form-control col-6 mr-2" %>
    <%= f.submit "送信", class: "btn btn-success col-2" %>
  </div>
<% end %>
