<div class= "container">
  <div class= "row">
    <div class= "max-auto">
      <h2>情報編集画面</h2>
      <!-- エラーメッセージ(後で日本語化)　-->
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <!-- 編集フォーム-->
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for"inputImage">プロフィール画像</label><br>
          <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for ="inputName">名前</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>

        <div class="form-group">
          <lebel for"inputIntroduction">自己紹介</lebel><br>
          <%= f.text_area :introduction, placeholder: "自己紹介" %>
        </div>

        <div class="form-group">
          <label for"inputLike">好きな風景</label><br>
          <%= f.text_field :like, placeholder: "好きな風景" %>
        </div>

        <div class="form-group">
          <%= f.submit "編集完了", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>