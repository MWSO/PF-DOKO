<div class= "row">
  <div class= "col-auto max-auto">
    <h2 class= "mb-3">情報編集画面</h2>
    <!-- エラーメッセージ(後で日本語化)　-->
    <%= render "layouts/errors", model: @user %>

    <!-- 編集フォーム-->
    <% unless current_user.email == "guest@gmail.com" %>
      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <label for"inputImage">プロフィール画像</label>
          <%= f.file_field :profile_image, placeholder: "画像", accept: "image/*", class: "form-control-file" %>
        </div>

        <div class="form-group">
          <label for ="inputName">名前</label>
          <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control" %>
        </div>

        <div class="form-group">
          <lebel for"inputIntroduction">自己紹介</lebel>
          <%= f.text_area :introduction, placeholder: "自己紹介", class: "form-control" %>
        </div>

        <div class="form-group">
          <label for"inputLike">好きな風景</label>
          <%= f.text_field :like, placeholder: "好きな風景", class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "編集完了", class: "btn btn-success btn-block mt-3" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <h2 class= "text-center mt-5">ゲストユーザーの編集はできません</h2>
  <% end %>
</div>