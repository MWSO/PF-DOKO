<div class= "row">
  <h3>タグ一覧</h3>
</div>

<div class= "row">
  <% @tags.each do |tag| %>
    <%= link_to tag_tag_relations_path(tag) do %>
      <div class= "border border-dark p-1 m-2">
        <span class="badge badge-pill badge-info"><%= tag.name %></span><%= "(#{tag.posts.count})" %>
      </div>
    <% end %>
  <% end %>
  <%= paginate @tags %>
</div>
