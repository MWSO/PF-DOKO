<div class= "row">
  <h3>タグ一覧(投稿件数）</h3>
</div>

<div class= "row">
  <% @tags.each do |tag| %>
    <% unless tag.posts.count == 0 %>
      <%= link_to tag_tag_relations_path(tag) do %>
        <div class= "border border-dark p-1 m-2 font">
          <span class="badge badge-pill badge-info"><%= tag.name %></span><%= "(#{tag.posts.count})" %>
        </div>
      <% end %>
    <% else %>
    <% end %>
  <% end %>
</div>

<div class= "d-flex justify-content-center">
  <%= paginate @tags %>
</div>
