<% if post_image.favorited_by?(current_user) %>
  <div>
   <%= link_to post_favorites_path(post_image), method: :delete do %>
     <i class="fas fa-star" style="color: gold"></i>
   <% end %>
  </div>
<% else %>
  <div>
   <%= link_to post_favorites_path(post_image), method: :post do %>
     <i class="fas fa-star"></i>
   <% end %>
  </div>
<% end %>