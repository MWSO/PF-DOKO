<div class= "mx-auto">
  <div class= "d-flex flex-wrap">
    <% if posts.exists? %>
    <!--post_image=投稿物、投稿を4つごとに折り返す-->
      <% posts.each do |post_image| %>
        <%= link_to post_path(post_image) do %>
          <div class="clearfix border p-3 border-info m-3">
            <div class="float-none mb-2">
              <%= image_tag post_image.get_post_image(200,200), class: "img-fluid" %>
            </div>
            <div class= "text-center">
              <%= post_image.title %>
            </div>
            <div class= "text-center">
              <i class= "fas fa-tag"></i><%= post_image.tags.map(&:name).join(" ") %>
            </div>
          </div>
        <% end %>
      <% end %>

    <% else %>
      <h3><%= user.name %>さんの投稿はありません。</h3>
    <% end %>
  </div>
</div>