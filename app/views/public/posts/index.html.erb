<div class= "container">

  <div class= "row">
    <h2>投稿一覧</h2>
  </div>

  <div class= "row">
    <div class= "col-auto">
      <div class= "d-flex flex-wrap">
      <!--post_image=投稿物、投稿を4つごとに折り返す-->
        <% @posts.each do |post_image| %>
          <%= link_to post_path(post_image) do %>
            <div class="clearfix border p-3 border-info">
              <div class="float-none mb-2">
                <%= image_tag post_image.get_post_image(200,200), class: "img-fluid" %>
              </div>
              <div class= "text-center">
                <%= post_image.title %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

</div>