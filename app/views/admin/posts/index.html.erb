<div class= "row">
  投稿一覧
</div>

<div class= "row">
  <div class= "col-auto">
    <div class= "d-flex flex-wrap">
      <% @posts.each do |post_image| %>
        <%= link_to admin_post_path(post_image) do %>
          <div class="clearfix border p-3 border-info m-3">
            <div class="float-none mb-2">
              <%= image_tag post_image.get_post_image(200,200), class: "img-fluid pb-2" %>
            </div>
            <div class= "text-center">
              <%= post_image.title %>
            </div>
            <div class= "text-center">
              <i class= "fas fa-tag"></i><%= post_image.tags.map(&:name).join(" ") %>
            </div>
            <div class= "text-center">
              <%= link_to "削除", admin_post_path(post_image), method: :delete, data: { confirm: "削除しますか？" }, class: "btn btn-danger btn-sm" %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>