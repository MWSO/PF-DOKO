<!DOCTYPE html>
<html>
  <head>
    <title>DOKO</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header>
    <nav class= "navbar navbar-expand-lg">
      <div class= "container">
          <!--ロゴ、ホームへのリンク-->
          <%= link_to root_path do %>
            ロゴ
          <% end %>
        <!-- メニューバー-->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"><i class="fas fa-star"></i></span>
        </button>
        <div class= "collapse navbar-collapse" id= "navbarNavDropdown">
          <!--ナビバー内リンク-->
          <ul class="navbar-nav">
            <!--利用者サインイン時-->
            <% if user_signed_in? %>
              <div>ようこそ、<%= current_user.name %>さん！</div>
              <li class= "nav-item"><%= link_to "マイページ", my_page_path %></li>
              <li class= "nav-item"><%= link_to "投稿一覧", posts_path %></li>
              <li class= "nav-item"><%= link_to "ユーザー一覧", users_path %></li>
              <li class= "nav-item"><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
            <!--管理者サインイン時-->
            <% elsif admin_signed_in? %>
              <li class= "nav-item"><%= link_to "ユーザー一覧", admin_users_path %></li>
              <li class= "nav-item"><%= link_to "投稿一覧", admin_posts_path %></li>
              <li class= "nav-item"><%= link_to "コメント一覧", admin_comments_path %></li>
              <li class= "nav-item"><%= link_to "ログアウト", destroy_admin_session_path, method: :delete %></li>
           <!--サインアウト時-->
           <% else %>
              <li class= "nav-item"><%= link_to "ホーム", root_path %></li>
              <li class= "nav-item"><%= link_to "アバウト", about_path %></li>
              <li class= "nav-item"><%= link_to "ログイン", new_user_session_path %></li>
              <li class= "nav-item"><%= link_to "新規登録", new_user_registration_path %></li>
            <% end %>
          </ul>
        </div>
        <!--検索窓-->

        <div>
          <%= search_form_for @search_posts, url: posts_path do |f| %>
            <%= f.text_field :title_cont, placeholder: "タイトルを入力" %>
            <%= f.submit "検索する" %>
          <% end %>
        </div>

      </div>
    </nav>
  </header>

  <main class= "mt-5">
    <%= yield %>
  </main>

  <footer>
    <div class="container">
      <div class="row">
        <div class="mx-auto">
          <p style="color: #fff; text-align: center;">CopyRight KURO</p>
        </div>
      </div>
    </div>
  </footer>

</html>
